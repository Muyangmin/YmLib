<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="YmuiAspectRatioImageView">
        <attr name="ymui_ratio" format="float" />
    </declare-styleable>

    <declare-styleable name="YmuiShadowLayout">
        <attr name="ymui_shadowColor" format="color" />
        <attr name="ymui_shadowDx" format="dimension" />
        <attr name="ymui_shadowDy" format="dimension" />
        <attr name="ymui_shadowRadius" format="dimension" />
        <attr name="ymui_shadowShape" format="enum">
            <enum name="rectangle" value="1" />
            <enum name="oval" value="2" />
        </attr>
        <attr name="ymui_shadowSide" format="flags">
            <flag name="all" value="15" />
            <flag name="left" value="1" />
            <flag name="top" value="2" />
            <flag name="right" value="4" />
            <flag name="bottom" value="8" />
        </attr>
    </declare-styleable>

    <declare-styleable name="YmuiMultiRippleView">
        <attr name="ymui_paintColor" format="color|reference" />
        <attr name="ymui_circleMode" format="enum">
            <enum name="fill" value="0" />
            <enum name="ring" value="1" />
        </attr>
        <attr name="ymui_maxCircles" format="integer" />
        <attr name="ymui_duration" format="integer" />
        <attr name="ymui_ringWidth" format="dimension" />
        <attr name="ymui_startRadius" format="dimension" />
        <attr name="ymui_startAlpha" format="float" />
        <attr name="ymui_endRadius" format="dimension" />
        <attr name="ymui_endAlpha" format="float" />
    </declare-styleable>
</resources>